{
  "name": "have-it",
  "description": "The fastest NPM install does nothing because you already have it",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/have-it/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js",
    "bin"
  ],
  "bin": {
    "have-it": "bin/have-it.js",
    "have": "bin/have-it.js"
  },
  "homepage": "https://github.com/bahmutov/have-it#readme",
  "keywords": [
    "fast",
    "install",
    "installer",
    "npm",
    "yarn"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/have-it.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js bin/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.8.0",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "license-checker": "8.0.4",
    "mocha": "3.2.0",
    "nsp": "2.6.2",
    "pre-git": "3.13.0",
    "standard": "8.6.0"
  },
  "dependencies": {
    "execa": "0.6.0",
    "mkdirp": "0.5.1",
    "ramda": "0.23.0",
    "semver": "5.3.0"
  }
}
