{
  "name": "have-it",
  "description": "The fastest NPM install does nothing because you already have it",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/have-it/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run build",
        "npm run ban"
      ],
      "pre-push": [
        "npm run e2e",
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "have-it": "dist/have-it.js",
    "have": "dist/have-it.js"
  },
  "homepage": "https://github.com/bahmutov/have-it#readme",
  "keywords": [
    "fast",
    "install",
    "installer",
    "npm",
    "yarn"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/have-it.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix *.js src/*.js bin/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "postinstall": "echo \"have-it: set HAVE environment variable\nto the root folder with most packages\n\"",
    "build": "rollup -c rollup.config.js",
    "prebuild": "npm run lint",
    "e2e": "./test/e2e.sh"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "check-more-types": "2.23.0",
    "debug": "2.6.1",
    "dependency-check": "2.8.0",
    "deps-ok": "1.2.0",
    "execa": "0.6.0",
    "git-issues": "1.3.1",
    "glob-all": "3.1.0",
    "lazy-ass": "1.5.0",
    "license-checker": "8.0.4",
    "mkdirp": "0.5.1",
    "mocha": "3.2.0",
    "nsp": "2.6.2",
    "pre-git": "3.13.0",
    "ramda": "0.23.0",
    "rollup": "0.41.4",
    "rollup-plugin-commonjs": "7.0.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "semantic-release": "^6.3.2",
    "semver": "5.3.0",
    "simple-commit-message": "3.0.1",
    "snap-shot": "2.13.0",
    "spawn-sync": "1.0.15",
    "standard": "8.6.0",
    "try-thread-sleep": "1.0.0"
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "dependencies": {
    "parse-package-name": "0.1.0"
  }
}
